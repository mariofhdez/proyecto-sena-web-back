generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelo de datos para la tabla de usuarios

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  role Role @default(USER)
  isActive TrueFalseOption @default(TRUE)
}

enum Role {
  ADMIN
  USER
}

enum TrueFalseOption {
  TRUE
  FALSE
}