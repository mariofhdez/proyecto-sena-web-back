{
  "name": "proyecto-sena-back",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --watch ./src/server.js",
    "start": "cross-env NODE_ENV=production node ./src/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --verbose ",
    "test:watch": "cls && npm run test -- --watch --silent",
    "test:coverage": "cls && npm run test -- --coverage --silent && start coverage/lcov-report/index.html",
    "test:db:setup": "cross-env NODE_ENV=test npx prisma migrate deploy && cross-env NODE_ENV=test node prisma/seedStatic.js",
    "test:db:clean": "cross-env NODE_ENV=test node tests/setup/cleanDb.js",
    "seed:static": "node prisma/seedStatic.js",
    "seed:demo": "node prisma/seedDemo.js"
  },
  "keywords": [],
  "author": "Mario Fl√≥rez <mario.florez249@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "description": "",
  "devDependencies": {
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "mysql2": "^3.9.2",
    "prisma": "^6.6.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"],
    "globalSetup": "<rootDir>/tests/setup/globalSetup.js",
    "testTimeout": 30000,
    "verbose": true
  }
}
